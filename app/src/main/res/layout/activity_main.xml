<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical">
    <include layout="@layout/title_share"/>

    <ListView
        android:id="@+id/list_chat"
        android:layout_weight="1"
        android:scrollbars="none"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/linecolos"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/paddingleftandright"
        android:paddingRight="@dimen/paddingleftandright">

        <EditText
            android:id="@+id/content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/paddingleftandright"
            android:layout_weight="1"
            android:background="@drawable/edittext_boder_black"
            android:gravity="left"
            android:hint="请输入消息"
            android:maxLines="5"
            android:minLines="1"
            android:textColorHighlight="@color/text_gray"
            android:textColorHint="@color/text_gray"
            android:textSize="15sp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_custom"
            android:text="发送"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>